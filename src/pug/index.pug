        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        link(rel="stylesheet", href="styles.css")

        title ec-test
        
    body
        header.hero
            .hero__top
                .hero__container
                    .hero__logo
                        a(href="#").logo Loremipsum.<span class="color-blue">net</span>
                    .hero__nav.hero__nav--hidden
                        include modules/_menu.pug
                    .menu-button
                        .menu-button__middle
            .hero__container
                .hero__content
                    .hero__caption
                        h1.hero__title <span class="color-blue">Lorem ipsum</span> dolor sit ametconsectetur <span class="color-blue">adipiscing</span>
