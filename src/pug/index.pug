                                p.stages__item-text Сonsecteturadipiscing elit
                            li.stages__item.stages__item--docs
                                p.stages__item-text Sed do eiusmod tempor
                            li.stages__item.stages__item--envelope
                                p.stages__item-text Esse cillum dolore eu fugiat
                            li.stages__item.stages__item--money
                                p.stages__item-text Excepteur sint occaecat cupidatat non proident
                    .checkout__form
                        form.form#form(action="" method="POST")
                            .form__group

                                .form__select(data-state="")
                                    .form__select-title(data-default="Выберите тип системы") Выберите тип системы
                                    .form__select-content
                                        input.form__select-input#singleSelect0(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect0") Sed ut perspiciatis

                                        input.form__select-input#singleSelect1(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect1") Nemo enim ipsam

                                        input.form__select-input#singleSelect2(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect2") Et harum quidem

                                        input.form__select-input#singleSelect3(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect3") Temporibus autem

                                        input.form__select-input#singleSelect4(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect4") Itaque earum rerum

                                        input.form__select-input#singleSelect5(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect5") Nemo enim ipsam

                                        input.form__select-input#singleSelect6(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect6") Et harum quidem

                                        input.form__select-input#singleSelect7(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect7") Temporibus autem

                                        input.form__select-input#singleSelect8(type="radio" name="singleSelect" checked)
                                        label.form__select-label(for="singleSelect8") Itaque earum rerum

                                label.sr-only(for="email") Ваш e-mail
                                input.form__input(type="text" id="email" placeholder="Ваш e-mail" name="mail" required)
                                label.sr-only(for="name") Ваше имя
                                input.form__input(type="text" id="name" placeholder="Ваше имя" name="username" required)
                            .form__group
                                .form__range
                                    label.sr-only(for="range")
                                    .form__range-text
                                        p.form__range-decs Sed ut perspiciatis, unde omnis iste natus
                                        p.form__range-output 75%
                                    input.form__range-slider(type="range" value="75" id="range" name="scale" min="1" max="100")
                                .form__file
                                    input.form__input-file(type="file" id="input__file" name="file")
                                    label.form__file-button(for="input__file")
                                        span.form__file-icon-wrapper
                                            img.form__file-icon(src="./img/file.svg" alt="Прикрепить файл" width="25")
                                        span.form__file-button-text Прикрепить файл
                            .form__button
                                input.button.button--large(type="submit" value="Отправить")
